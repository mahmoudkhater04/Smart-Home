<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Smoke">

    <TextView
        android:id="@+id/textViewSmoke"
        android:layout_width="328dp"
        android:layout_height="90dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="154dp"
        android:layout_marginBottom="384dp"
        android:gravity="center"
        android:text="Smoke Sensor"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonsmoke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonsmoke"
        android:layout_width="228dp"
        android:layout_height="66dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="491dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="174dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/smoketext"
        android:layout_width="301dp"
        android:layout_height="73dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="175dp"
        android:text="NOT SET"
        android:gravity="center"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonsmoke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSmoke" />
</androidx.constraintlayout.widget.ConstraintLayout>